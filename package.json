{
	"name": "42cms",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"build": "tsc --config ./server/tsconfig.json",
		"start": "nodemon ./dist/server.ts --config ./server/tsconfig.json",
		"dev:client": "webpack-dev-server --mode development --hot --config ./client/webpack.config.js",
		"dev:server": "NODE_ENV=development nodemon ./server/src/server.ts",
		"dev": "npm run dev:server && npm run dev:client",
		"prod": "npm run build && npm run start",
		"test": "TS_NODE_PROJECT=./server/tsconfig.json mocha -r ts-node/register ./**/tests/*.test.ts --exit --timeout 2000",
		"test-simple": "mocha -r ts-node/register ./**/tests/*.test.ts --config ./server/tsconfig.json --exit --timeout 2000",
		"db-start": "mkdir -p ./db && mongod --dbpath ./db",
		"storybook": "start-storybook"
	},
	"proxy": "http://localhost:3001",
	"nodemonConfig": {
		"watch": [
			"./server/src/*"
		],
		"ext": "ts",
		"ignore": [
			"node_modules/**/*",
			"./server/src/**/*.spec.ts"
		],
		"exec": "ts-node"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JanWalsh91/42CMS.git"
	},
