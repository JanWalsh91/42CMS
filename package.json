{
	"name": "42cms",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"build": "tsc --config ./server/tsconfig.json",
		"start": "nodemon ./dist/server.ts --config ./server/tsconfig.json",
		"dev:server": "NODE_ENV=development nodemon ./server/src/server.ts",
		"prod": "npm run build && npm run start",
		"test": "TS_NODE_PROJECT=./server/tsconfig.json mocha -r ts-node/register ./**/tests/*.test.ts --exit --timeout 2000",
		"test-simple": "mocha -r ts-node/register ./**/tests/*.test.ts --config ./server/tsconfig.json --exit --timeout 2000",
		"db-start": "mkdir -p ./db && mongod --dbpath ./db"
	},
	"proxy": "http://localhost:3001",
	"nodemonConfig": {
		"watch": [
			"./server/src/*"
		],
		"ext": "ts",
		"ignore": [
			"node_modules/**/*",
			"./server/src/**/*.spec.ts"
		],
		"exec": "ts-node"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JanWalsh91/42CMS.git"
	},
	"author": "jwalsh",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/JanWalsh91/42CMS/issues"
	},
	"homepage": "https://github.com/JanWalsh91/42CMS#readme",
	"dependencies": {
		"bcrypt": "^3.0.6",
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"express-session": "^1.16.2",
		"image-type": "^4.1.0",
		"mongoose": "^5.5.12",
		"mongoose-autopopulate": "^0.9.1",
		"multer": "^1.4.2",
		"read-chunk": "^3.2.0",
		"uuid": "^3.3.3",
		"xmlbuilder": "^13.0.2"
	},
	"devDependencies": {
		"@types/chai": "^4.2.3",
		"@types/cors": "^2.8.5",
		"@types/express": "^4.16.1",
		"@types/express-session": "^1.15.12",
		"@types/mocha": "^5.2.7",
		"@types/mongoose": "^5.5.3",
		"@types/multer": "^1.3.9",
		"chai": "^4.2.0",
		"chai-files": "^1.4.0",
		"chai-http": "^4.3.0",
		"chalk": "^2.4.2",
		"mocha": "^6.1.4",
		"ts-node-register": "^1.0.0",
		"typescript": "^3.5.1"
	}
}
